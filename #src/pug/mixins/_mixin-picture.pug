mixin picture(name)
    picture(class=`picture`)
        source(
            type="image/webp", 
            srcset = `images/${name}.webp 1x, images/${name}@2x.webp 2x, images/${name}@3x.webp 3x, images/${name}@4x.webp 4x`)

        img.picture__img(
            src=`images/${name}.jpg`,
            srcset= `images/${name}@2x.jpg 2x, images/${name}@3x.jpg 3x, images/${name}@4x.jpg 4x` 
            alt="some_picture")

